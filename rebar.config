%% Config file for can-applicatione
{deps_dir, ["deps"]}.
{deps, [sl, eapi]}.
{erl_opts, [debug_info, fail_on_warning]}.
{require_otp_vsn, "R14|R15"}.
{sub_dirs, ["src"]}.
{port_sources, ["c_src/*.c"]}.
{port_envs, [{"CFLAGS", "$CFLAGS -I ../eapi/include"},
	     {"PORT_IN_FILES", "$PORT_IN_FILES ../eapi/lib/release/eapi_drv.a"},
	     {"PORT_OUT_FILE", "priv/release/can_sock_drv.so"}]}.
